rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 認証済みかつ許可されたドメインのユーザーのみアクセス可能
    function isAllowedUser() {
      return request.auth != null 
        && request.auth.token.email_verified == true
        && (
          request.auth.token.email.endsWith('@tomonokai-corp.com') || 
          request.auth.token.email.endsWith('@des')
        );
    }

    // 全てのドキュメントに対するアクセス制御
    match /{document=**} {
      allow read, write: if isAllowedUser();
    }

    // チャンクデータ
    match /chunks/{chunkId} {
      allow read: if isAllowedUser();
      allow write: if isAllowedUser();
    }

    // 同期ログ
    match /syncLogs/{logId} {
      allow read: if isAllowedUser();
      allow write: if isAllowedUser();
    }

    // ユーザープロファイル
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // チャット履歴
    match /chats/{chatId} {
      allow read: if isAllowedUser() && resource.data.userId == request.auth.uid;
      allow write: if isAllowedUser() && request.resource.data.userId == request.auth.uid;
    }
  }
}